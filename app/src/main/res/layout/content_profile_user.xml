<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/app_bar_profile_user"
            tools:context="com.example.oleksandr.discount.activity.UserProfileActivity">

        <ImageView
                android:src="@drawable/photo_camera_line"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:id="@+id/image_user"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="centerCrop"/>

        <TextView
                tools:text="ID380969558015"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_id_number"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/image_user"
                android:singleLine="true"
                android:textStyle="bold"/>

        <TextView
                android:text="@string/profile_user_connect_fb"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_connection_fb"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:drawableEnd="@drawable/fb"
                android:gravity="center_vertical"
                android:singleLine="true"
                app:layout_constraintTop_toTopOf="@+id/text_id_number"
                app:layout_constraintBottom_toBottomOf="@+id/text_id_number"/>

        <EditText
                android:text=""
                android:hint="Ваше имя"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingTop="@dimen/content_profile_margin_top"
                android:paddingBottom="@dimen/content_profile_margin_bottom"
                android:paddingStart="@dimen/content_profile_margin_start"
                android:paddingEnd="@dimen/content_profile_margin_end"
                android:background="@drawable/text_view_frame"
                android:id="@+id/text2"
                android:maxLines="1"
                android:singleLine="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/text_id_number"/>

        <EditText
                android:text=""
                android:hint="Фамилия"
                android:background="@drawable/text_view_frame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/text4"
                android:maxLines="1"
                android:textSize="20sp"
                android:paddingTop="@dimen/content_profile_margin_top"
                android:paddingBottom="@dimen/content_profile_margin_bottom"
                android:paddingStart="@dimen/content_profile_margin_start"
                android:paddingEnd="@dimen/content_profile_margin_end"
                android:singleLine="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/text2"/>

        <Spinner
                android:background="@drawable/text_view_frame"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/text_sex"
                android:minHeight="40dp"
                app:layout_constraintTop_toBottomOf="@+id/text_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

        <AutoCompleteTextView
                android:text=""
                android:drawableEnd="@drawable/arrow_down_course"
                android:hint="Регион"
                android:background="@drawable/text_view_frame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_region"
                android:textSize="20sp"
                android:paddingTop="@dimen/content_profile_margin_top"
                android:paddingBottom="@dimen/content_profile_margin_bottom"
                android:paddingStart="@dimen/content_profile_margin_start"
                android:paddingEnd="@dimen/content_profile_margin_end"
                android:singleLine="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/text_sex"/>

        <TextView
                android:text=""
                android:hint="Дата рождения"
                android:drawableEnd="@drawable/arrow_down_course"
                android:background="@drawable/text_view_frame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_date"
                android:maxLines="1"
                android:textSize="20sp"
                android:paddingTop="@dimen/content_profile_margin_top"
                android:paddingBottom="@dimen/content_profile_margin_bottom"
                android:paddingStart="@dimen/content_profile_margin_start"
                android:paddingEnd="@dimen/content_profile_margin_end"
                android:singleLine="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/text4"/>

        <EditText
                android:text=""
                android:hint="e-mail"
                android:background="@drawable/text_view_frame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/text3"
                android:maxLines="1"
                android:textSize="20sp"
                android:paddingTop="@dimen/content_profile_margin_top"
                android:paddingBottom="@dimen/content_profile_margin_bottom"
                android:paddingStart="@dimen/content_profile_margin_start"
                android:paddingEnd="@dimen/content_profile_margin_end"
                android:singleLine="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/text_region"/>

        <TextView
                android:text="Изменить пароль"
                android:drawableEnd="@drawable/arrow_right_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_change_password"
                android:background="@drawable/text_view_frame"
                android:textSize="20sp"
                android:paddingTop="@dimen/content_profile_margin_top"
                android:paddingBottom="@dimen/content_profile_margin_bottom"
                android:paddingStart="@dimen/content_profile_margin_start"
                android:paddingEnd="@dimen/content_profile_margin_end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/text3"/>

        <TextView
                android:text="Виход из акаунта"
                android:drawableEnd="@drawable/arrow_right_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_exit_account"
                android:background="@drawable/text_view_frame"
                android:textSize="20sp"
                android:paddingTop="@dimen/content_profile_margin_top"
                android:paddingBottom="@dimen/content_profile_margin_bottom"
                android:paddingStart="@dimen/content_profile_margin_start"
                android:paddingEnd="@dimen/content_profile_margin_end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/text_change_password"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>