<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_profile_user"
        tools:context="com.example.oleksandr.discount.activity.UserProfileActivity">

    <ImageView
            android:src="@drawable/photo_camera_line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    <TextView
            tools:text="ID380969558015"
            android:text="ID380969558015"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_id_number"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:textStyle="bold"/>

    <TextView
            android:text="@string/profile_user_connect_fb"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_connection_fb"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:drawableEnd="@drawable/fb"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="@+id/text_id_number"
            app:layout_constraintBottom_toBottomOf="@+id/text_id_number"/>
</android.support.constraint.ConstraintLayout>
