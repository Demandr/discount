<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/frame_nav_view"
        android:layout_height="@dimen/nav_header_height"
        android:layout_marginRight="8dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:orientation="horizontal"
        android:gravity="bottom">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/foto_contact"
            tools:srcCompat="@mipmap/ic_launcher_round"
            android:scaleType="centerCrop"
            android:id="@+id/iv_nav_photo_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"/>

    <TextView
            tools:text="Максим Коваль"
            android:text="Максим Коваль"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nav_name_user"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/iv_nav_photo_user"
            app:layout_constraintStart_toEndOf="@+id/iv_nav_photo_user"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <TextView
            tools:text="+380673607437"
            android:text="+380673607437"
            android:textColor="@color/colorNavNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nav_number_user"
            app:layout_constraintBottom_toBottomOf="@+id/iv_nav_photo_user"
            app:layout_constraintStart_toEndOf="@+id/iv_nav_photo_user"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nav_name_user"
            app:layout_constraintVertical_bias="1.0"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ico_notification"
            android:id="@+id/iv_nav_notification"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/iv_nav_photo_user"
            android:layout_marginStart="8dp"/>

    <TextView
            android:text="Бонусний счет"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nav_bonus"
            app:layout_constraintStart_toStartOf="@+id/tv_nav_number_user"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nav_number_user"/>

    <TextView
            android:text="Денежный счет"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nav_money"
            app:layout_constraintStart_toStartOf="@+id/tv_nav_bonus"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            />

    <View
            android:layout_height="0.5dp"
            android:background="@color/colorBgBlue"
            android:id="@+id/view1"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@+id/iv_nav_photo_user"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nav_bonus"/>

    <View
            android:layout_height="0.5dp"
            android:background="@color/colorBgBlue"
            android:id="@+id/view2"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@+id/iv_nav_photo_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nav_money"/>

    <TextView
            android:text="Уведомления"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:layout_constraintStart_toStartOf="@+id/tv_nav_money"
            />

    <TextView
            android:text="13 874.65"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            app:layout_constraintStart_toEndOf="@+id/tv_nav_bonus"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_nav_bonus"/>

    <TextView
            android:text="1 655.00"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            app:layout_constraintStart_toEndOf="@+id/tv_nav_money"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_nav_money"/>

    <TextView
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="8"
            android:background="@drawable/nav_tx_frame"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView7"/>

</android.support.constraint.ConstraintLayout>

