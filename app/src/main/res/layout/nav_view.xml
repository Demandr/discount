<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.NavigationView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/nav_view"
        android:background="@color/colorBgBlue"
        app:itemTextColor="@color/colorTextWhite"
        app:itemIconTint="@color/colorIconBg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                <include layout="@layout/nav_header_profile_user"
                        />

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_navigation_menu_item"
                        android:id="@+id/nav_company">

                    <ImageView
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_company"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_company"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ico_company"
                            android:layout_height="wrap_content"
                            android:id="@+id/iv_company"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                    <TextView
                            app:layout_constraintLeft_toRightOf="@id/iv_company"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.08"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/iv_company"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/colorTextWhite"
                            android:text="Компании"
                            android:layout_marginEnd="24dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:id="@+id/tv_company"/>

                    <View
                            android:layout_height="0.5dp"
                            android:background="@android:color/darker_gray"
                            app:layout_constraintRight_toRightOf="@id/tv_company"
                            app:layout_constraintLeft_toLeftOf="@id/iv_company"
                            android:id="@+id/view1"
                            android:layout_width="0dp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/tv_company"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="3dp"/>
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_navigation_menu_item"
                        android:id="@+id/nav_news">

                    <ImageView
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_news"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_news"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ico_news"
                            android:layout_height="wrap_content"
                            android:id="@+id/iv_news"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                    <TextView
                            app:layout_constraintLeft_toRightOf="@id/iv_news"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.08"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/iv_news"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/colorTextWhite"
                            android:text="Лента новостей"
                            android:layout_marginEnd="24dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:id="@+id/tv_news"/>

                    <View
                            android:layout_height="0.5dp"
                            android:background="@android:color/darker_gray"
                            app:layout_constraintRight_toRightOf="@id/tv_news"
                            app:layout_constraintLeft_toLeftOf="@id/iv_news"
                            android:id="@+id/view2"
                            android:layout_width="0dp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/tv_news"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="3dp"/>


                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_navigation_menu_item"
                        android:id="@+id/nav_bonus">

                    <ImageView
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_bonus"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_bonus"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ico_bonus"
                            android:layout_height="wrap_content"
                            android:id="@+id/iv_bonus"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                    <TextView
                            app:layout_constraintLeft_toRightOf="@id/iv_bonus"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.08"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/iv_bonus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/colorTextWhite"
                            android:text="Биржа бонусов"
                            android:layout_marginEnd="24dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:id="@+id/tv_bonus"/>

                    <View
                            android:layout_height="0.5dp"
                            android:background="@android:color/darker_gray"
                            app:layout_constraintRight_toRightOf="@id/tv_bonus"
                            app:layout_constraintLeft_toLeftOf="@id/iv_bonus"
                            android:id="@+id/view3"
                            android:layout_width="0dp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/tv_bonus"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="3dp"/>
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_navigation_menu_item"
                        android:id="@+id/nav_chat">
                    <ImageView
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_chat"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_chat"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ico_chat"
                            android:layout_height="wrap_content"
                            android:id="@+id/iv_chat"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                    <TextView
                            app:layout_constraintLeft_toRightOf="@id/iv_chat"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.08"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/iv_chat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/colorTextWhite"
                            android:text="Чаты"
                            android:layout_marginEnd="24dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:id="@+id/tv_chat"/>

                    <View
                            android:layout_height="0.5dp"
                            android:background="@android:color/darker_gray"
                            app:layout_constraintRight_toRightOf="@id/tv_chat"
                            app:layout_constraintLeft_toLeftOf="@id/iv_chat"
                            android:id="@+id/view4"
                            android:layout_width="0dp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/tv_chat"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="3dp"/>
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_navigation_menu_item"
                        android:id="@+id/nav_contacts">

                    <ImageView
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_contacts"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_contacts"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ico_contacts"
                            android:layout_height="wrap_content"
                            android:id="@+id/iv_contacts"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                    <TextView
                            app:layout_constraintLeft_toRightOf="@id/iv_contacts"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.08"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/iv_contacts"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/colorTextWhite"
                            android:text="Контакты"
                            android:layout_marginEnd="24dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:id="@+id/tv_contacts"/>

                    <View
                            android:layout_height="0.5dp"
                            android:background="@android:color/darker_gray"
                            app:layout_constraintRight_toRightOf="@id/tv_contacts"
                            app:layout_constraintLeft_toLeftOf="@id/iv_contacts"
                            android:id="@+id/view5"
                            android:layout_width="0dp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/tv_contacts"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="3dp"/>
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_navigation_menu_item"
                        android:id="@+id/nav_discount">
                    <ImageView
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_discount"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_discount"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ico_discount"
                            android:layout_height="wrap_content"
                            android:id="@+id/iv_discount"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                    <TextView
                            app:layout_constraintLeft_toRightOf="@id/iv_discount"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.08"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/iv_discount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/colorTextWhite"
                            android:text="Скидочние карты"
                            android:layout_marginEnd="24dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:id="@+id/tv_discount"/>

                    <View
                            android:layout_height="0.5dp"
                            android:background="@android:color/darker_gray"
                            app:layout_constraintRight_toRightOf="@id/tv_discount"
                            app:layout_constraintLeft_toLeftOf="@id/iv_discount"
                            android:id="@+id/view6"
                            android:layout_width="0dp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/tv_discount"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="3dp"/>
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_navigation_menu_item"
                        android:id="@+id/nav_history_operation">

                    <ImageView
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_history_operation"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_history_operation"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ico_histiry_operation"
                            android:layout_height="wrap_content"
                            android:id="@+id/iv_history_operation"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                    <TextView
                            app:layout_constraintLeft_toRightOf="@id/iv_history_operation"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.08"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/iv_history_operation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/colorTextWhite"
                            android:text="История операций"
                            android:layout_marginEnd="24dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:id="@+id/tv_history_operation"/>

                    <View
                            android:layout_height="0.5dp"
                            android:background="@android:color/darker_gray"
                            app:layout_constraintRight_toRightOf="@id/tv_history_operation"
                            app:layout_constraintLeft_toLeftOf="@id/iv_history_operation"
                            android:id="@+id/view7"
                            android:layout_width="0dp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/tv_history_operation"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="3dp"/>
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_navigation_menu_item"
                        android:id="@+id/nav_voucher">

                    <ImageView
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_voucher"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_voucher"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ico_voucher"
                            android:layout_height="wrap_content"
                            android:id="@+id/iv_voucher"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                    <TextView
                            app:layout_constraintLeft_toRightOf="@id/iv_voucher"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.08"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/iv_voucher"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/colorTextWhite"
                            android:text="Ваучеры и акции"
                            android:layout_marginEnd="24dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:id="@+id/tv_voucher"/>

                    <View
                            android:layout_height="0.5dp"
                            android:background="@android:color/darker_gray"
                            app:layout_constraintRight_toRightOf="@id/tv_voucher"
                            app:layout_constraintLeft_toLeftOf="@id/iv_voucher"
                            android:id="@+id/view8"
                            android:layout_width="0dp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/tv_voucher"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="3dp"/>
                </android.support.constraint.ConstraintLayout>
                <TextView
                        android:id="@+id/tv_qr_code"
                        android:layout_gravity="bottom"
                        android:text="Использовать QR код"
                        android:textAlignment="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:background="@color/colorTextYellow"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.design.widget.NavigationView>